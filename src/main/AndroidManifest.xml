<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alt.fib.br.pokemon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PokeList"
            android:label="@string/title_activity_poke_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter> //Cria um intent-filter abrindo a tag
                <action android:name="android.intent.action.MAIN" /> //passa ele como MAIN no action
                <category android:name="android.intent.category.LAUNCHER" /> //e informa LAUNCHER no category
            </intent-filter> //fecha a tag do intent-filter
        </activity>
    </application>

</manifest>